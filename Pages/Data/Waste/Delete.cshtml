@page "{id:int}"
@model wws_web.Pages.Data.Waste.DeleteModel
@{
    ViewData["Title"] = "Delete Waste";
}

<h2>Delete Waste</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Item?.WasteType</dd>

        <dt class="col-sm-2">Picture</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Item?.WastePicture) && Model.Item.WastePicture.StartsWith("/"))
            {
                <img src="@Model.Item.WastePicture" style="max-width:200px;max-height:150px;border:1px solid #ddd;padding:4px;" />
            }
            else
            {
                <div style="color:#666">No web-accessible image</div>
            }
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Item.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
